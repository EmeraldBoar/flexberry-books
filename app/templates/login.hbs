<div class="form-signin-wrapper">
  <main class="form-signin text-center">
    <form onsubmit={{action "login"}}>
      <img class="mb-4" src="images/logo-dark.png" alt="" height="57">
      <h1 class="h3 mb-3 fw-normal">Вход</h1>

      <div class="form-floating form-floating--margin">
        <div class="errors">
          {{#each errors as |error|}}
            <span class="errors__item">{{error.detail}}</span>
          {{/each}}
        </div>
        {{input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" value=email}}
      </div>
      <div class="form-floating">
        {{input type="password" class="form-control" id="floatingPassword" placeholder="Пароль" value=password}}
      </div>

      <div class="checkbox mb-3">
        <label>
          {{input type="checkbox" checked=remember}} Запомнить
        </label>
      </div>
      <button class="w-100 btn btn-lg btn-primary mb-3" type="submit" href="index.html">Войти</button>
      <a class="w-100" href="index.html" onclick={{action "comeBack"}}>Назад</a>
    </form>
  </main>
</div>